 <h3>Comments:</h3>
<span id="comments_count"><%= pluralize(@dream.comments.count, "Comment") %></span>

   <%= render "comments/new" %>

  <% for comment in @dream.comments %>
    <div class="comment">
    <% if @dream.comments.index(comment) == @dream.comments.length-1 %> 
      <!-- This is our new comment -->
      <p id="new_comment">
    <% else %>
     <p>
    <% end %>

    <%= sanitize(comment.body,:tags => %w(b i u)) %><br />
      <class id="subline">by <%= getUsernameLinkById(comment.user_id) %>, <%= time_ago_in_words(comment.created_at) %> ago</class>
     </p>
   
    </div>
  <% end %>
  
