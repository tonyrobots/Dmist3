	<%  if !current_user %>
	 <div id="welcome">Welcome to Dreamerist!</div>
	    <%= link_to "Sign In", new_user_session_path  %> |
		<%= link_to "Sign Up", new_user_registration_path  %> |
		<%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
	<% else %>
	  <%=  avatar_thumb_linked(current_user.id, class:"left", id:"login_box_avatar") %>
	 <div id="welcome">Welcome, <%= link_to current_user.username, current_user %>!</div> 
	  <%= link_to "Edit Settings/Profile", edit_user_path(current_user) %> |
	  <%= link_to "Logout", destroy_user_session_path, :confirm => "Are you sure you want to logout?" %>
	  <% if current_user.is_admin? %>
	       | <%= link_to "Admin", rails_admin_path %>
	  <% end %>
	<% end %>
