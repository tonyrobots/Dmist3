			<fieldset>
				<legend>Register</legend>
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			  <%= devise_error_messages! %>
			<div id="inputArea">
			  <p><%= f.label :username %><br />
