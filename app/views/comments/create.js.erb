/* Insert a notice between the last comment and the comment form */
$("#comment-notice").html('<div class="flash notice"><%= escape_javascript(flash.discard(:notice)) %></div>');

/* Hide the comment form */
$('#comment_form').hide('slow');


/* Replace the count of comments */
$("#comments_count").html("<%= pluralize(@commentable.comments.count, 'Comment') %>");

/* add new comment on top, if new comment */
<% unless @comment.body.blank? %>

$("<%= escape_javascript(render(@comment)) %>").prependTo("#comments");  
 
<% end %>

/* clear the comment form */
$("#new_comment")[0].reset();

/* Highlight the new comment */
$("#comment_<%= @comment.id %>").effect("highlight", {color:"#55aa55"}, 3000);



